---
import BaseLayout from '@/layouts/BaseLayout.astro';
import CvTimeline from '@/components/CvTimeline.astro';
import { cv } from '@/data/cv';

const experienceEntries = cv.experience.map((e) => ({
  title: e.role,
  subtitle: e.company,
  url: e.url,
  period: e.period,
  detail: e.focus,
}));

const educationEntries = cv.education.map((e) => ({
  title: e.degree,
  subtitle: e.institution,
  url: e.url,
  period: e.period,
  detail: e.thesis,
}));
---

<BaseLayout title="CV" description="Curriculum Vitae for Mário Salgado — Senior Technical Manager, Data Engineering, and ML Platform.">
  <div class="max-w-3xl mx-auto px-4 py-16">
    <h1 class="text-4xl font-extrabold mb-12">
      Curriculum <span class="bg-gradient-to-r from-indigo-500 to-purple-500 bg-clip-text text-transparent">Vitae</span>
    </h1>

    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6 flex items-center gap-3">
        <span class="w-8 h-8 rounded-lg bg-indigo-100 dark:bg-indigo-900/30 flex items-center justify-center">
          <svg class="w-4 h-4 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 14.15v4.25c0 1.094-.787 2.036-1.872 2.18-2.087.277-4.216.42-6.378.42s-4.291-.143-6.378-.42c-1.085-.144-1.872-1.086-1.872-2.18v-4.25m16.5 0a2.18 2.18 0 00.75-1.661V8.706c0-1.081-.768-2.015-1.837-2.175a48.114 48.114 0 00-3.413-.387m4.5 8.006c-.194.165-.42.295-.673.38A23.978 23.978 0 0112 15.75c-2.648 0-5.195-.429-7.577-1.22a2.016 2.016 0 01-.673-.38m0 0A2.18 2.18 0 013 12.489V8.706c0-1.081.768-2.015 1.837-2.175a48.111 48.111 0 013.413-.387m7.5 0V5.25A2.25 2.25 0 0013.5 3h-3a2.25 2.25 0 00-2.25 2.25v.894m7.5 0a48.667 48.667 0 00-7.5 0" />
          </svg>
        </span>
        Work Experience
      </h2>
      <CvTimeline entries={experienceEntries} />
    </section>

    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6 flex items-center gap-3">
        <span class="w-8 h-8 rounded-lg bg-indigo-100 dark:bg-indigo-900/30 flex items-center justify-center">
          <svg class="w-4 h-4 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4.26 10.147a60.436 60.436 0 00-.491 6.347A48.627 48.627 0 0112 20.904a48.627 48.627 0 018.232-4.41 60.46 60.46 0 00-.491-6.347m-15.482 0a50.57 50.57 0 00-2.658-.813A59.905 59.905 0 0112 3.493a59.902 59.902 0 0110.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.697 50.697 0 0112 13.489a50.702 50.702 0 017.74-3.342" />
          </svg>
        </span>
        Education
      </h2>
      <CvTimeline entries={educationEntries} />
    </section>

    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6 flex items-center gap-3">
        <span class="w-8 h-8 rounded-lg bg-indigo-100 dark:bg-indigo-900/30 flex items-center justify-center">
          <svg class="w-4 h-4 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 6.75L22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3l-4.5 16.5" />
          </svg>
        </span>
        Tech Stack
      </h2>
      <div class="flex flex-wrap gap-2">
        {cv.techStack.map((tech) => (
          <span class="px-3 py-1.5 rounded-full text-sm font-medium bg-indigo-100 dark:bg-indigo-900/30 text-indigo-700 dark:text-indigo-300">
            {tech}
          </span>
        ))}
      </div>
    </section>

    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6 flex items-center gap-3">
        <span class="w-8 h-8 rounded-lg bg-indigo-100 dark:bg-indigo-900/30 flex items-center justify-center">
          <svg class="w-4 h-4 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 21l5.25-11.25L21 21m-9-3h7.5M3 5.621a48.474 48.474 0 016-.371m0 0c1.12 0 2.233.038 3.334.114M9 5.25V3m3.334 2.364C11.176 10.658 7.69 15.08 3 17.502m9.334-12.138c.896.061 1.785.147 2.666.257m-4.589 8.495a18.023 18.023 0 01-3.827-5.802" />
          </svg>
        </span>
        Languages
      </h2>
      <p class="text-gray-600 dark:text-gray-400 text-lg">{cv.languages.join(' · ')}</p>
    </section>

    <section>
      <h2 class="text-2xl font-bold mb-6 flex items-center gap-3">
        <span class="w-8 h-8 rounded-lg bg-indigo-100 dark:bg-indigo-900/30 flex items-center justify-center">
          <svg class="w-4 h-4 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
          </svg>
        </span>
        Hobbies
      </h2>
      <p class="text-gray-600 dark:text-gray-400 text-lg">{cv.hobbies.join(' · ')}</p>
    </section>
  </div>
</BaseLayout>
