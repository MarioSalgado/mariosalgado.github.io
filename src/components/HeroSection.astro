---
import { siteConfig } from '@/data/site';
import SocialLinks from './SocialLinks.astro';
---

<section class="relative overflow-hidden py-24 px-4">
  <!-- Gradient background -->
  <div class="absolute inset-0 bg-gradient-to-br from-indigo-500/10 via-purple-500/10 to-pink-500/10 dark:from-indigo-500/5 dark:via-purple-500/5 dark:to-pink-500/5"></div>
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-indigo-900/20 via-transparent to-transparent dark:from-indigo-500/10"></div>

  <div class="relative max-w-4xl mx-auto text-center">
    <img
      src={siteConfig.avatar}
      alt={siteConfig.author}
      class="w-28 h-28 rounded-full mx-auto mb-6 ring-4 ring-indigo-500/20 shadow-lg object-cover"
      width="112"
      height="112"
    />
    <h1 class="text-5xl md:text-6xl font-extrabold mb-4 bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 bg-clip-text text-transparent">
      {siteConfig.title}
    </h1>
    <p class="text-xl text-gray-600 dark:text-gray-400 mb-8">{siteConfig.tagline}</p>
    <SocialLinks />
  </div>
</section>
