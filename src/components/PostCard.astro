---
interface Props {
  title: string;
  date: Date;
  slug: string;
  image?: string;
  categories: string[];
  description?: string;
}

const { title, date, slug, image, categories, description } = Astro.props;
const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<article class="group relative rounded-2xl overflow-hidden bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800 shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
  <a href={`/blog/${slug}`} class="block">
    {image && (
      <div class="relative h-48 overflow-hidden bg-gradient-to-br from-indigo-100 to-purple-100 dark:from-indigo-950 dark:to-purple-950">
        <img
          src={image}
          alt={title}
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
          loading="lazy"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-black/40 to-transparent"></div>
      </div>
    )}
    <div class="p-6">
      <div class="flex flex-wrap gap-2 mb-3">
        {categories.map((cat) => (
          <span class="text-xs font-semibold px-2.5 py-0.5 rounded-full bg-indigo-100 dark:bg-indigo-900/30 text-indigo-700 dark:text-indigo-300">
            {cat}
          </span>
        ))}
      </div>
      <h2 class="text-xl font-bold mb-2 group-hover:text-indigo-500 dark:group-hover:text-indigo-400 transition-colors">
        {title}
      </h2>
      {description && (
        <p class="text-gray-600 dark:text-gray-400 text-sm mb-3 line-clamp-2">{description}</p>
      )}
      <time class="text-xs text-gray-500 dark:text-gray-500">{formattedDate}</time>
    </div>
  </a>
</article>
