---
interface TimelineEntry {
  title: string;
  subtitle: string;
  url: string;
  period: string;
  detail?: string;
}

interface Props {
  entries: TimelineEntry[];
}

const { entries } = Astro.props;
---

<div class="relative pl-8 border-l-2 border-indigo-200 dark:border-indigo-800 space-y-8">
  {entries.map((entry) => (
    <div class="relative">
      <div class="absolute -left-[25px] w-4 h-4 rounded-full bg-indigo-500 ring-4 ring-white dark:ring-gray-950"></div>
      <h3 class="text-lg font-bold">{entry.title}</h3>
      <a
        href={entry.url}
        class="text-indigo-500 hover:text-indigo-400 font-medium transition-colors"
        target="_blank"
        rel="noopener"
      >
        {entry.subtitle}
      </a>
      <p class="text-sm text-gray-500 dark:text-gray-500 mt-1">{entry.period}</p>
      {entry.detail && (
        <p class="text-sm text-gray-600 dark:text-gray-400 mt-1 font-medium">{entry.detail}</p>
      )}
    </div>
  ))}
</div>
